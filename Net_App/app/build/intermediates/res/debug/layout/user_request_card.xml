<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffffff">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Item"
        android:id="@+id/itemName"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="15dp"
        android:shadowColor="#ffdddddd"
        android:textColor="#ff5b5b5b" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location"
        android:layout_below="@id/itemName"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/req_card_location"
        android:layout_toRightOf="@+id/req_card_image"
        android:layout_marginLeft="10dp"
        android:paddingTop="5dp"
        android:layout_marginBottom="10dp"
        android:textColor="#ff2e95cc"
        android:textStyle="bold" />


    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/location_flat"
        android:id="@+id/req_card_image"
        android:layout_below="@id/itemName"
        />

    />

</RelativeLayout><!-- From: file:/home/gaurav/AndroidstudioProjects/Net_App/app/src/main/res/layout/user_request_card.xml -->
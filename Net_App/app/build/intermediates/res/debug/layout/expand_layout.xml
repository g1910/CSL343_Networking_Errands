<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:background="#ffc4c4c4">

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/quantityimage"
        android:src="@drawable/quantity"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/quantity"
        android:layout_toRightOf="@+id/quantityimage"
        android:layout_alignTop="@+id/quantityimage"
        android:layout_marginLeft="10dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#ff616161" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/costimage"
        android:src="@drawable/cost"
        android:layout_toLeftOf="@+id/cost"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/cost"
        android:layout_alignParentRight="true"

        android:layout_marginRight="10dp"
        android:layout_alignTop="@+id/costimage"

        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#ff616161" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/clockimage"
        android:src="@drawable/clock1"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/cost"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/time"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/quantity"
        android:layout_alignTop="@+id/clockimage"

        android:layout_toRightOf="@+id/clockimage"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#ff616161" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/calendarimage"
        android:src="@drawable/calendar1"
        android:layout_toLeftOf="@+id/date"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/cost"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"

        android:id="@+id/date"
        android:layout_below="@+id/cost"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#ff616161" />

</RelativeLayout><!-- From: file:/home/gaurav/AndroidstudioProjects/Net_App/app/src/main/res/layout/expand_layout.xml -->
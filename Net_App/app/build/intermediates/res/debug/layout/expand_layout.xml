<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:background="#ffc4c4c4">

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/clockimage"
        android:src="@drawable/clock1"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/time"
        android:layout_marginLeft="10dp"
        android:layout_alignTop="@+id/clockimage"

        android:layout_toRightOf="@+id/clockimage"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#ff616161" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/calendarimage"
        android:src="@drawable/calendar1"
        android:layout_toLeftOf="@+id/date"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"

        android:id="@+id/date"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#ff616161" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/description"
        android:layout_below="@id/clockimage"
        android:layout_alignLeft="@id/clockimage"
        android:layout_alignRight="@id/date"
        android:minLines="1"
        android:maxLength="140"
        android:maxLines="6"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#ff2f2f2f"
        android:hint="Description"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"/>

</RelativeLayout><!-- From: file:/home/gaurav/6thSem/CSL343/merge/withmaster/CSL343_Networking_Errands/Net_App/app/src/main/res/layout/expand_layout.xml -->
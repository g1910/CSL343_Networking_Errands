
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/background_material_dark">


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:hint="Item"
        android:id="@+id/itemName"
        android:textStyle="bold"
        android:maxLength="50"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@+id/multiplyicon"
        android:layout_centerVertical="true"
        android:inputType="textMultiLine|textNoSuggestions"
        android:minLines="1"
        android:maxLines="3"
        android:ems="7"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"

        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:hint="Per item price"
        android:id="@+id/Priceperitem"
        android:textStyle="bold"
        android:maxLength="50"
        android:inputType="number"
        android:ems="7"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@+id/multiplyicon"
        android:layout_marginTop="10dp"
        android:layout_below="@id/itemName"
        android:layout_alignBottom="@+id/numberPicker"

        />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/multiply2"
        android:id="@+id/multiplyicon"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/numberPicker"/>


    <NumberPicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/numberPicker"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="10dp"

        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true" />


</RelativeLayout>